<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grizzly Games</title>    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: #2E2E2E">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">            
            <div class="navbar-header">                
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-header">
                    <a href="http://www.grizzlygames.co/"><img src="~/Content/Images/GG_Logo.jpg" class="navbar-brand" style="width: 50px; height: 50px;" /></a>

                    @Html.ActionLink("Grizzly Games", "Index", "Home", new { @class = "navbar-brand" })
                </div>                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"> 
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Social", "Social", "Home")</li>
                    <li>@Html.ActionLink("Game", "Game", "Home")</li>
                    <li>@Html.ActionLink("GGTV", "GGTV", "Home")</li>
                    <li>@Html.ActionLink("Video", "Video", "Home")</li>
                    <li><a target="_blank" href="https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=TGW6A7M2GXMCS"><strong>Donate</strong></a></li>
                    <!--
                    <li>Html.ActionLink("Contact", "Contact", "Home")</li>
                    -->
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content text-center">
        <div class="col-md-12" style="background-color: #2A2A2A">
            <img src="~/Content/Images/GrizzlyGamesWebsiteHeader.png" class="img-responsive center-block" />
            @RenderBody()
            <footer style="padding-bottom: 5px;">
                <h6 style="color: #2A2A2A">.</h6>
                <hr />
                <h3>Thank you for visting!</h3>
                <hr />
                <p>&copy; @DateTime.Now.Year - Grizzly Games</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
